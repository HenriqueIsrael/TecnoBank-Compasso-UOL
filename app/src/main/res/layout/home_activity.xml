<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/extrato_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/greenTecnoBank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/intoolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/extrato_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/extrato_toolbar"
        app:layout_constraintStart_toStartOf="@+id/extrato_toolbar"
        app:layout_constraintTop_toTopOf="@id/extrato_toolbar" />

    <ImageView
        android:id="@+id/logo_toolbar"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_onboarding"
        app:layout_constraintBottom_toBottomOf="@+id/extrato_toolbar"
        app:layout_constraintStart_toStartOf="@+id/extrato_toolbar"
        app:layout_constraintTop_toTopOf="@id/extrato_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TecnoBank"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/extrato_toolbar"
        app:layout_constraintStart_toEndOf="@+id/logo_toolbar"
        app:layout_constraintTop_toTopOf="@id/extrato_toolbar" />

    <Button
        android:id="@+id/botao_login"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:drawableEnd="@drawable/ic_login"
        app:layout_constraintBottom_toBottomOf="@+id/extrato_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/extrato_toolbar"
        app:layout_constraintTop_toTopOf="@id/extrato_toolbar" />

    <Button
        android:id="@+id/botao_notificacao"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:drawableEnd="@drawable/ic_notificacao"
        app:layout_constraintBottom_toBottomOf="@+id/extrato_toolbar"
        app:layout_constraintEnd_toStartOf="@+id/botao_login"
        app:layout_constraintTop_toTopOf="@id/extrato_toolbar" />

    <Button
        android:id="@+id/botao_qrcode"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:drawableEnd="@drawable/ic_qrcode"
        app:layout_constraintBottom_toBottomOf="@+id/extrato_toolbar"
        app:layout_constraintEnd_toStartOf="@+id/botao_notificacao"
        app:layout_constraintTop_toTopOf="@id/extrato_toolbar" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/navHostFragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:background="@color/white"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extrato_toolbar"
        app:navGraph="@navigation/home_nav_graph" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/home_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>